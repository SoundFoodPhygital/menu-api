# Flask application configuration
FLASK_ENV=production
SECRET_KEY=change-me-in-production
JWT_SECRET_KEY=change-jwt-secret-in-production

# Database configuration
# SQLite (default):
DATABASE_URL=sqlite:///instance/project.db

# PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/soundfood

# MariaDB/MySQL:
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/soundfood

# Default admin user (created on first startup if DB is empty)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123
ADMIN_EMAIL=admin@example.com

# Rate limiting storage (use redis in production with multiple workers)
# RATELIMIT_STORAGE_URI=redis://localhost:6379
RATELIMIT_STORAGE_URI=memory://
